<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Force dark blue theme always (even in light mode) -->
    <style name="Base.Theme.LightAndMatter" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue_darker</item>
        <item name="colorOnPrimary">@color/light_text</item>
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue_darker</item>
        <item name="colorOnSecondary">@color/light_text</item>
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:navigationBarColor">@color/dark_blue</item>
        <item name="android:windowBackground">@color/dark_blue</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.LightAndMatter" parent="Base.Theme.LightAndMatter" />
</resources>
